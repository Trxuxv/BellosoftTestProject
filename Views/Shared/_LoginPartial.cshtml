@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link user-title text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon-user">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                @User.Identity?.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark logout-button" style="  font-size: 13px;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark act-btns" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark act-btns-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
<style>
    .user-title {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        font-size: 13px;
        width: 200px;
        padding: 4%;
        border-radius: 25px;
        align-content: center;
        justify-content: space-around;
        box-shadow: rgba(0, 0, 0, 0.15) 0px 2px 8px;
        align-items: center;
    }

    .icon-user {
        width: 25px;
        height: 25px;
        margin-right: 1%;
    }

    .act-btns {
        /*background: #ffb840fa;*/
        font-weight: 500;
        padding: 8px 4rem;
        border-radius: 5px;
        text-align: center;
        width: 170px;
        margin-right: 2%;
    }

    .act-btns-2 {
        background-image: linear-gradient(45deg, #e50000a8, #ff8b27);
        font-weight: 500;
        padding: 8px 4rem;
        width: 170px;
        text-align: center;
        border-radius: 5px;
    }

    .logout-button {
        border-radius: 5px;
        text-align: center;
        padding: 8px 4rem;
        font-weight: 500;
        font-size: 13px;
        margin-top: 2%;
        width: 120px;
    }
</style>